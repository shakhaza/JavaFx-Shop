<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafxapp.HelloController">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              styleClass="header-bar">
            <children>
                <Label text="MOSH-SHOP"
                       styleClass="header-title"/>
                <TextField fx:id="searchField"
                           promptText="Search product..."
                           styleClass="search-field"/>
            </children>
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
        </HBox>
    </top>

    <!-- MAIN CONTENT AS TABS -->
    <center>
        <TabPane>
            <tabs>
                <!-- SHOP TAB -->
                <Tab text="Shop" closable="false">
                    <content>
                        <BorderPane>
                            <left>
                                <VBox spacing="10" styleClass="side-panel">
                                    <children>
                                        <Label text="Categories"
                                               styleClass="side-title"/>
                                        <ListView fx:id="categoryList"
                                                  prefWidth="200"/>
                                    </children>
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                </VBox>
                            </left>
                            <center>
                                <ScrollPane fitToWidth="true">
                                    <content>
                                        <FlowPane fx:id="productGrid"
                                                  hgap="15" vgap="15"
                                                  prefWrapLength="800">
                                            <padding>
                                                <Insets top="10" right="10" bottom="10" left="10"/>
                                            </padding>
                                        </FlowPane>
                                    </content>
                                </ScrollPane>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- CART & FAVORITES TAB -->
                <Tab fx:id="cartFavoritesTab" text="Cart & Favorites" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true">
                            <content>
                                <VBox spacing="20" padding="20">
                                    <!-- Cart section -->
                                    <VBox spacing="10" styleClass="side-panel">
                                        <children>
                                            <Label text="Cart"
                                                   styleClass="side-title"/>
                                            <ListView fx:id="cartList"
                                                      prefHeight="250"/>
                                            <Label text="Double-click to remove item"
                                                   styleClass="cart-hint"/>
                                            <HBox spacing="10">
                                                <Button text="Clear Cart"
                                                        onAction="#clearCart"
                                                        styleClass="clear-btn"/>
                                                <Button text="Remove Selected"
                                                        onAction="#removeSelectedFromCart"
                                                        styleClass="remove-btn"/>
                                            </HBox>
                                            <Label text="Total:"/>
                                            <Label fx:id="totalLabel"
                                                   styleClass="total-label"/>
                                        </children>
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>
                                    </VBox>

                                    <!-- Favorites section -->
                                    <VBox spacing="10" styleClass="side-panel">
                                        <children>
                                            <HBox spacing="8" alignment="CENTER_LEFT">
                                                <Label text="Favorites"
                                                       styleClass="side-title"/>
                                                <Label fx:id="favoritesCountLabel"
                                                       text="(0)"
                                                       styleClass="favorites-count"/>
                                            </HBox>
                                            <FlowPane fx:id="favoritesGrid" hgap="15" vgap="15" prefWrapLength="800">
                                                <padding>
                                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                                </padding>
                                            </FlowPane>
                                        </children>
                                        <padding>
                                            <Insets top="10" right="10" bottom="10" left="10"/>
                                        </padding>
                                    </VBox>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>